// Place your key bindings in this file to override the defaults
[
    {
        "key": "shift+alt+c",
        "command": "editor.action.toggleColumnSelection"
    },
    {
        "key": "tab",
        "command": "-tabnine.accept-inline-suggestion",
        "when": "tabnine.in-inline-suggestions && tabnine.inline-suggestion:enabled || tabnine.in-inline-suggestions && tabnine.snippet-suggestion:enabled"
    },
    {
        "key": "alt+tab",
        "command": "editor.action.inlineSuggest.commit",
        "when": "inlineSuggestionHasIndentationLessThanTabSize && inlineSuggestionVisible && !editorTabMovesFocus"
    },
    {
        "key": "tab",
        "command": "-editor.action.inlineSuggest.commit",
        "when": "inlineSuggestionHasIndentationLessThanTabSize && inlineSuggestionVisible && !editorTabMovesFocus"
    },
    {
        "key": "ctrl+alt+m",
        "command": "-code-runner.stop"
    },
    {
        "key": "ctrl+shift+s",
        "command": "terminal.sendSelectedToTerminal",
        "when": "editorTextFocus && !notebookEditorFocused && !python.datascience.hascodecells"
    },
    {
        "key": "cmd+enter",
        "command": "-terminal.sendSelectedToTerminal",
        "when": "editorTextFocus && !notebookEditorFocused && !python.datascience.hascodecells"
    }
]
